{
  "public": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://recipe-hub-api.onrender.com/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/public/**/*.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg))",
      "dest": "/home/home.html"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg))",
      "dest": "/login/index.html"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg))",
      "dest": "/favorite/fav.html"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg))",
      "dest": "/home/home.html"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg))",
      "dest": "/$1"
    }
  ]
}